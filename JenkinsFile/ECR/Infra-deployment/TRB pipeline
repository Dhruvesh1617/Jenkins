node('slave1') {
    // Define AWS credentials
withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', 
credentialsId: 'aws_credentials', 
accessKeyVariable: 'AWS_ACCESS_KEY_ID', 
secretKeyVariable: 'AWS_SECRET_ACCESS_KEY']])
def resource_name="abcd"
{
        // Checkout code from Git repository
        stage('git checkout') {
            git branch: 'main', credentialsId: 'git_credentials', url: 'https://github.com/naveen-uppala/Infra-App-Deployment.git'
        }

        // Terraform initialization
        stage('Terraform Init') {
            dir('Infra/us-east-1'){
            sh 'terraform init -force-copy'
            }
        }

        // Terraform plan
        stage('Terraform Destroy Plan') {
            dir('Infra/us-east-1'){
            sh 'terraform plan -destroy ${resource_name}'
            }
        }

        // Approval before applying changes
        stage('Approval') {
            dir('Infra/us-east-1'){
            input 'Proceed with Terraform Destroy?'
            }
        }

        // Terraform apply
        stage('Terraform Destroy') {
            dir('Infra/us-east-1'){
            sh 'terraform destroy-auto-approve ${resource_name}'
            }
        }
    }
}
